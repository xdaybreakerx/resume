---
import { cn } from '@/utils'
import Button from './Button.astro'
const {
	as: Tag = 'div',
	class: className,
	href,
	heading,
	description = [],
	tech = []
} = Astro.props
---

<Tag
	class={cn(
		className,
		'relative rounded-2xl border border-border bg-primary-foreground px-5 py-3',
		href && 'transition-all hover:border-foreground/25 hover:shadow-sm'
	)}
	href={href}
>
	<div class='flex flex-col gap-y-1.5'>
		<div class='flex flex-col gap-y-0.5'>
			<h1 class='text-lg font-medium'>{heading}</h1>
			<div class='flex w-4/5 flex-row flex-wrap gap-x-4 gap-y-2'>
				{tech.map((item: string) => <Button as='button' title={item} style='pill' />)}
			</div>
			<div>
				{
					description.map((item: string) => (
						<ul class='ml-4 list-disc text-muted-foreground'>
							<li>{item}</li>
						</ul>
					))
				}
			</div>
		</div>
		<slot />
	</div>
</Tag>
